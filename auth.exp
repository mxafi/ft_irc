#!/usr/bin/expect
# This is an expect script to make testing faster, it will authenticate you to our irc server
# Usage: expect auth.exp <host> <port> <nick> <user> <pass>

set host [lindex $argv 0]
set port [lindex $argv 1]
set nick [lindex $argv 2]
set user [lindex $argv 3]
set pass [lindex $argv 4]

spawn nc -c $host $port
sleep 0.1
send "PASS $pass\nUSER $user\nNICK $nick\n"
interact
